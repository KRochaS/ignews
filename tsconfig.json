{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "./jest-setup.ts"
    ],
    "exclude": [
        "node_modules",
        "test.ts",
        "**/*.spec.ts"
    ],
    "types": [
        "node",
        "jest",
        "@testing-library/jest-dom"
    ],
}